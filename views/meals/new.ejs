<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
	<h1><%= title %></h1>
  <p>Please first ensure that the Meal is not in the dropdown
    <select>
      <% meals.forEach(function(meal) { %>
        <option><%= meal.name %></option>
      <% }) %>
    </select>
  </p>
  <form id="add-meal-form" action="/meals" method="POST">
    <label for="meal-input">Meal:</label>
    <input type="text" name="name" id="meal-input">
    <button type="submit">Add Meal</button>
  </form>

  <% meals.forEach(function(meal) { %>
    <form action="/meals/<%= meal._id %>?_method=DELETE" method="POST"> 
      <p><%= meal.name %> </p>
      <button type="submit">DELETE</button>
    </form>
  <% }) %>

</main>

<%- include('../partials/footer') %>